generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}      


model user {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String  
  role       String      @default("User") 
  post       post[]    @relation("userPost")
  comments  comment[]  @relation("userComments")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}


model post {
  id        Int       @id @default(autoincrement())
  noOfStars Int       @default(0)
  title     String
  content   String
  noOfLikes Int       @default(0)
  ownerId   Int      
  owner     user      @relation(fields: [ownerId], references: [id], name: "userPost")
  comments  comment[] @relation("PostComments")
}

model comment {
  id        Int       @id @default(autoincrement())
  content   String 
  commentorId  Int
  comment      user   @relation(fields: [commentorId], references: [id], name: "userComments")
  postId       Int    
  post         post   @relation(fields: [postId], references: [id], name: "PostComments")
  }